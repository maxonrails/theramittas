<h1>Listing Articles</h1>

<table class = table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>

      <td><%= article.title %></td>
      <td><%= truncate(article.text, length: 100) %> - posted by <%= article.user.name if article.user%> </td>
      <td><%= image_tag article.image.url(:large) %></td><br>

      <td><%= link_to 'Show', article_path(article) %></td>
      <% if article.user == current_user %>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article_path(article), method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <% end %>

    </tr>
  <% end %>
</table>
<%= link_to 'Back', root_path %> <%= link_to 'New article', new_article_path %>